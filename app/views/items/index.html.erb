<div class="container w-sm-75">
  <div class="row row-cols-1 row-cols-2 row-cols-md-4">
    <% @tokens.each do |token| %>
      <div class="col my-3">
        <div class="card h-100">
          <img class="card-img-top" src="<%=token.image_uri%>" alt="Card image cap" style="height:100%">
          <div class="card-body">
            <h5 class="card-title"><%=token.name%></h5>
          </div>
          <ul class="list-group list-group-flush">
          </ul>
          <div class="card-body d-flex justify-content-between mx-2">
            <%if (token.list_token == nil or token.list_token.is_listed == false)%>
              <%= link_to 'Sell', token_path(token) ,class: 'btn btn-danger stretched-link w-50'%>
            <%else%>
              <small class="text-muted fs-5"><%=token.list_token.list_price%> ETH</small>
              <%=link_to 'Cancel', token_path(token) ,class: 'btn btn-secondary stretched-link'%>
            <%end%>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
